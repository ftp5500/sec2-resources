{
  "name": "Timer Extension",
  "version": "1.0.0",
  "description": "Hello Chrome World!",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16":"icon.png",
      "24":"icon.png",
      "32":"icon.png",
      "48":"icon.png",
      "128":"icon.png"
    },
    "default_title": "Timer Extension Action Title",
    "default_popup": "popup.html"
  }
}
